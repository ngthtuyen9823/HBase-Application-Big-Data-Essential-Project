<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">
	<decorator name="admin" page="admin.jsp">
		<pattern>/admin*</pattern>
	</decorator>
	<decorator name="seller" page="seller.jsp">
		<pattern>/seller*</pattern>
	</decorator>
	<decorator name="shipper" page="shipper.jsp">
		<pattern>/shipper*</pattern>
	</decorator>
	<decorator name="web" page="web.jsp">
		<pattern>/*</pattern>
	</decorator>
	<excludes>
		<pattern>/api*</pattern>
		<pattern>/login*</pattern>
		<pattern>/signup*</pattern>
		<pattern>/verification*</pattern>
		<pattern>/forgetpass*</pattern>
		<pattern>/changepass*</pattern>
	</excludes>
</decorators>